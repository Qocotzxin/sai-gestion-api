{
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/config/*": [
        "api/config/*"
      ],
      "@/controllers/*": [
        "api/controllers/*"
      ],
      "@/schemas/*": [
        "api/schemas/*"
      ],
      "@/models/*": [
        "api/schemas/models*"
      ],
      "@/middlewares/*": [
        "api/middlewares/*"
      ],
      "@/public/*": [
        "api/public/*"
      ],
      "@/routes/*": [
        "api/routes/*"
      ],
      "@/utils/*": [
        "api/utils/*"
      ],
    },
  },
  "include": [
    "api/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}